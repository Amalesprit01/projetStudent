{% extends 'base.html.twig' %}

{% block title %}Modifier la salle de classe{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles CSS améliorés pour une édition attrayante */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        .custom-header {
            background-color: #90caf9;
            color: #333;
            padding: 20px;
            text-align: center;
        }

        h1 {
            font-size: 32px;
        }

        form {
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%;
            padding: 12px;
            border: 2px solid #90caf9;
            border-radius: 5px;
            margin-bottom: 15px;
            font-size: 16px;
        }

        select {
            width: 100%;
            padding: 12px;
            border: 2px solid #90caf9;
            border-radius: 5px;
            margin-bottom: 15px;
            font-size: 16px;
        }

        button {
            background-color: #90caf9;
            color: #333;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        button:hover {
            background-color: #64b5f6;
        }

        a {
            text-decoration: none;
            padding: 12px 20px;
            border: 2px solid #90caf9;
            background-color: #90caf9;
            color: #333;
            border-radius: 5px;
            display: inline-block;
            margin-right: 10px;
            font-size: 16px;
        }

        a:hover {
            background-color: #64b5f6;
            border: 2px solid #64b5f6;
        }

        .delete-button {
            background-color: #f44336;
            border: 2px solid #f44336;
            color: #fff;
        }

        .delete-button:hover {
            background-color: #d32f2f;
            border: 2px solid #d32f2f;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="custom-header">
        <h1>Modifier la salle de classe</h1>
    </div>

    <form>
        <label for="classroom_name">Nom :</label>
        <input type="text" id="classroom_name" name="classroom_name">
        <label for="classroom_createdAt">CreatedAt :</label>
        <select id="classroom_createdAt" name="classroom_createdAt">
            <option value="2023-10-30 08:00">30 octobre 2023, 08:00 AM</option>
            <!-- Ajoutez d'autres options de date et d'heure au besoin -->
        </select>
        <button type="submit">Mettre à jour</button>
        <a href="{{ path('app_classroom_index') }}">Retour à la liste</a>
    </form>
</div>
{% endblock %}
