{% extends 'base.html.twig' %}

{% block title %}Classroom Index{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles avec des couleurs pastel pour une apparence attrayante */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .custom-header {
            background-color: #90caf9;
            color: #333;
            padding: 20px;
            text-align: center;
        }

        h1 {
            font-size: 36px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 15px;
            text-align: left;
        }

        th {
            background-color: #90caf9;
            color: #333;
        }

        tr:nth-child(even) {
            background-color: #e3f2fd;
        }

        a {
            text-decoration: none;
            padding: 10px 15px;
            border: 2px solid #90caf9;
            background-color: #90caf9;
            color: #333;
            border-radius: 5px;
        }

        a:hover {
            background-color: #64b5f6;
            border: 2px solid #64b5f6;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="custom-header">
        <h1>Classroom Index</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classroom in classrooms %}
            <tr>
                <td>{{ classroom.id }}</td>
                <td>{{ classroom.name }}</td>
                <td>{{ classroom.createdAt ? classroom.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_classroom_show', {'id': classroom.id}) }}">Show</a>
                    <a href="{{ path('app_classroom_edit', {'id': classroom.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style="text-align: center; margin-top: 20px;">
        <a href="{{ path('app_classroom_new') }}" style="background-color: #90caf9; color: #333; padding: 15px 25px; text-decoration: none; border-radius: 5px; font-size: 18px;">Create New</a>
    </div>
</div>
{% endblock %}
