{% extends 'base.html.twig' %}

{% block title %}Nouvelle salle de classe{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles avec des couleurs pastel pour un formulaire professionnel */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .custom-header {
            background-color: #90caf9;
            color: #333;
            padding: 20px;
            text-align: center;
        }

        h1 {
            font-size: 36px;
        }

        form {
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 5px;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        a {
            text-decoration: none;
            padding: 10px 15px;
            border: 2px solid #90caf9;
            background-color: #90caf9;
            color: #333;
            border-radius: 5px;
            display: inline-block;
        }

        a:hover {
            background-color: #64b5f6;
            border: 2px solid #64b5f6;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="custom-header">
        <h1>Créer une nouvelle salle de classe</h1>
    </div>

    <form>
        <label for="classroom_name">Nom :</label>
        <input type="text" id="classroom_name" name="classroom_name">
        <label for="classroom_createdAt">CreatedAt :</label>
        <select id="classroom_createdAt" name="classroom_createdAt">
            <option value="2023-10-30 08:00">30 octobre 2023, 08:00 AM</option>
            <!-- Ajoutez d'autres options de date et d'heure au besoin -->
        </select>
        <a href="{{ path('app_classroom_index') }}">Retour à la liste</a>
    </form>
</div>
{% endblock %}
