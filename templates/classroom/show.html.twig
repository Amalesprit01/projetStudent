{% extends 'base.html.twig' %}

{% block title %}Classroom{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles avec des couleurs plus douces et un espacement accru */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        .custom-header {
            background-color: #f0f0f0;
            color: #333;
            padding: 20px;
            text-align: center;
        }

        h1 {
            font-size: 24px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f0f0f0;
            color: #333;
        }

        tr:nth-child(even) {
            background-color: #f7f7f7;
        }

        a {
            text-decoration: none;
            padding: 10px 15px;
            border: 2px solid #007bff;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            margin: 5px;
            display: inline-block;
        }

        a:hover {
            background-color: #0056b3;
            border: 2px solid #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="custom-header">
        <h1>Classroom</h1>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classroom.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ classroom.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ classroom.createdAt ? classroom.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div style="text-align: center; margin-top: 20px;">
        <a href="{{ path('app_classroom_index') }}">Retour à la liste</a>
        <a href="{{ path('app_classroom_edit', {'id': classroom.id}) }}">Éditer</a>
    </div>

    {{ include('classroom/_delete_form.html.twig') }}
</div>
{% endblock %}
