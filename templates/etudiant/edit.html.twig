{% extends 'base.html.twig' %}

{% block title %}Modifier Étudiant{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles CSS pour la page "Modifier Étudiant" avec des couleurs pastel */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .custom-header {
            background-color: #90caf9;
            color: #333;
            padding: 20px;
            text-align: center;
        }

        h1 {
            font-size: 36px;
        }

        form {
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin: 20px auto;
            padding: 20px;
            width: 70%;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }

        input[type="text"], select {
            width: 100%;
            padding: 12px;
            border: 2px solid #90caf9;
            border-radius: 5px;
            margin-bottom: 15px;
            font-size: 16px;
        }

        button {
            background-color: #90caf9;
            color: #333;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        button:hover {
            background-color: #64b5f6;
        }

        a {
            text-decoration: none;
            padding: 12px 20px;
            border: 2px solid #90caf9;
            background-color: #90caf9;
            color: #333;
            border-radius: 5px;
            display: inline-block;
            margin-right: 10px;
            font-size: 16px;
        }

        a:hover {
            background-color: #64b5f6;
            border: 2px solid #64b5f6;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="custom-header">
        <h1>Modifier Étudiant</h1>
    </div>

    <form>
        {{ include('etudiant/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </form>

    <a href="{{ path('app_etudiant_index') }}">Retour à la liste</a>
    {{ include('etudiant/_delete_form.html.twig') }}
</div>
{% endblock %}
