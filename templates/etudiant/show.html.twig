{% extends 'base.html.twig' %}

{% block title %}Étudiant{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles CSS améliorés pour la page Étudiant avec des couleurs pastel */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .custom-header {
            background-color: #90caf9;
            color: #333;
            padding: 20px;
            text-align: center;
        }

        h1 {
            font-size: 36px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }

        th {
            background-color: #90caf9;
            color: #333;
            font-weight: bold;
        }

        a {
            text-decoration: none;
            padding: 12px 20px;
            border: 2px solid #90caf9;
            background-color: #90caf9;
            color: #333;
            border-radius: 5px;
            display: inline-block;
            margin-right: 10px;
            font-size: 16px;
            transition: background-color 0.3s, border-color 0.3s;
        }

        a:hover {
            background-color: #64b5f6;
            border: 2px solid #64b5f6;
        }

        .delete-button {
            background-color: #f44336;
            border: 2px solid #f44336;
            color: #fff;
        }

        .delete-button:hover {
            background-color: #d32f2f;
            border: 2px solid #d32f2f;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="custom-header">
        <h1>Étudiant</h1>
    </div>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ etudiant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ etudiant.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ etudiant.email }}</td>
            </tr>
            <tr>
                <th>Âge</th>
                <td>{{ etudiant.age }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_etudiant_index') }}">Retour à la liste</a>
    <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}">Modifier</a>

    {{ include('etudiant/_delete_form.html.twig') }}
</div>
{% endblock %}
